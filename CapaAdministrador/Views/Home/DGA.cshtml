
@{
    ViewBag.Title = "DGA";
}

@*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />*@ 
<div class="row">
    <section class="col-md-12" aria-labelledby="gettingStartedTitle">
        <h3>Dirección General Administrativa</h3>
        <table id="tablaDGA" class="display cell-border table" style="width: 100%">
            <thead class="thead-dark">
                <tr>
                    <th class="col-md-4" scope="col">Dependencia</th>
                    <th class="col-md-4" scope="col">Cantidad de Dispositivos</th>
                </tr>
            </thead>

        </table>
    </section>
</div>


@section scripts
            {
    <script>

                var tablaDGA;

                    jQuery.ajax({
        url: '@Url.Action("ListarDependenciasDGA", "Home")',
        type: "GET",
        dataType: "Json",
        contentType: "application/json; charset=utf-8",
        success: function (data) {
            console.log(data);
        }

    }),


    tablaDGA = $("#tablaDGA").DataTable({
        responsive: true,
        ordering: true,
        "ajax": {
            url: '@Url.Action("ListarDependenciasDGA","Home")',
            type: "GET",
            dataType: "Json"
        },
        "columns": [
            { "data": "Descripcion" },
            { "data": "Id" }

    ]
})
    </script>
}